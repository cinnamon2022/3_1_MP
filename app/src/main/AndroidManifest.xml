<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.meeting_app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light.NoActionBar">
        <activity
            android:name=".activity.addDeptPostActivity"
            android:exported="false" />
        <activity
            android:name=".activity.addSmallPostActivity"
            android:exported="false" />
        <activity
            android:name=".activity.SubActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:exported="true" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.SignupActivity" />
        <activity android:name=".activity.PwResetActivity" />
        <activity android:name=".activity.MemberInfoActivity" />
        <activity android:name=".activity.CameraActivity" />
        <activity android:name=".activity.GalleryActivity" />
        <activity android:name=".activity.BasicActivity" />
        <activity android:name=".activity.addPostActivity" />
        <activity android:name=".activity.PostActivity" />
        <activity android:name=".activity.SmallActivity" />
        <activity android:name=".activity.DeptActivity" />
    </application>

</manifest>